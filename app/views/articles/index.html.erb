<div class="wall-image">
  <h1>投稿一覧</h1>
    <table>
      <tr style="background:#ccccff">
        <th>Title</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
      <% @articles.each do |article| %>
      <tr>
        <td>
          <%= link_to article.title, article_path(article.id) %>
        </td>
        <td>
          <%= link_to "編集", edit_article_path(article.id), class: "btn edit-btn" %>
        </td>
        <td>
          <%= link_to "削除", article_path(article.id), method: :delete, class: "btn destroy-btn", "data-confirm" => "本当に削除しますか" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
